<% @product = params[:id].present? ? Product.find(params[:id]) : Product.find(params[:basket_item][:product_id]) %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @product.title %></h1>
      <p><%= @product.description %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
      <%= simple_form_for @basket_item, url: basket_items_path do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.input :quantity, input_html: { value: 1 } %>
        <%= f.submit "Add to basket", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
