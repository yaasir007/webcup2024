<div class="product-card">
    <%= image_tag(product.image_url, alt: product.title, class: "product-image") %>
    <div class="product-info">
        <h2 class="dripping-text"><%= product.title %></h2>
        <p><%= product.description %></p>
        <p class="price">$<%= '%.2f' % product.price %></p>
    </div>
</div>
